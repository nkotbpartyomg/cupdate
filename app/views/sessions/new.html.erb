<div class="container">

<h2>Log in to Cupdate</h2>

<%= form_tag sessions_create_path do %>

  <div class="field">
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="field">
  	<%= submit_tag "Log in", class: "btn btn-default" %>
  </div>

<% end %>

</div>