<div class="form-page container">

<ol class="breadcrumb">
	<li><%= link_to "Dashboard", artist_path(@artist) %></li>
	<li><%= link_to "View project", artist_item_path(@item.artist_id, @item) %></li>
	<li class="active">Edit project</li>
</ol>

<h2>Edit <%= @item.name %>
<%= link_to artist_item_path, method: :delete, class: "pull-right delete-trash tip", :data => {:toggle=>"tooltip"}, 'data-original-title' => "Delete project", 'data-placement' => 'top', data: { confirm: 'Are you sure you want to delete this project?' } do %>
	    <span class="glyphicon glyphicon-trash"></span>
	<% end %>
</h2>

	<div>
		<%= render partial: "form", locals: { artist: @artist, item: @item, submit_button_text: "Save changes"} %>
	</div>

</div>