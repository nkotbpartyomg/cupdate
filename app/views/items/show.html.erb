<div id="item-dash-wrapper">

<h1><%= @item.name %></h1>

<div id="status-icons" class="container-fluid">
	<div id="<%= Item::STATUSES[0] %>" class="col-xs-4 active-status">
		<span class="glyphicon glyphicon-pencil"></span>
		<h3><%= Item::STATUSES[0] %></h3>
	</div>
	<div id="<%= Item::STATUSES[1] %>" class="col-xs-4">
		<span class="glyphicon glyphicon-wrench"></span>
		<h3><%= Item::STATUSES[1] %></h3>
	</div>
	<div id="<%= Item::STATUSES[2] %>" class="col-xs-4">
		<span class="glyphicon glyphicon-gift"></span>
		<h3><%= Item::STATUSES[2] %></h3>
	</div>
</div> <!--end container-fluid div-->


<%= form_tag artist_item_path(@artist, @item), method: :patch do %>

	<%= hidden_field_tag "item[status]" %>

	<div class="field">
		<%= label_tag(:item_note, "Add a note to describe your progress") %> <br>
	  	<%= text_area_tag "item[note]", nil, size: "40x6" %>
	</div>

	<%= submit_tag (value="Click to automatically send update to the customer") %>
	<!--add functionality here to make it send an email-->

<% end %>


<%= link_to "Edit this item/this customer's settings", edit_artist_item_path, class: "btn btn-default" %> <br/>

<%= link_to "Delete this item", artist_item_path, method: :delete, class: "btn btn-default" , data: { confirm: 'Are you sure you want to delete this item?' } %>

<%= link_to "Return to artist dashboard", artist_path(@artist), class: "btn btn-default" %> <br/>

</div>