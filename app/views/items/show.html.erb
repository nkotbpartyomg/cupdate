<div id="item-dash-wrapper" class="container">

<ol class="breadcrumb">
	<li><%= link_to "Dashboard", artist_path(@artist) %></li>
	<li class="active">View project</li>
</ol>

<h1>Update your progress on <%= @item.name %></h1>
<h2>For <%= @item.customer_full_name %> - <%= @item.customer_email %></h2>

<p><%= @item.description %></p>

<div id="status-icons">
	<h2>Current Phase
		<button type="button" class="btn btn-default protip popover-dismiss" data-toggle="popover" data-content="Select your current phase by clicking the appropriate icon.">?</button>
	</h2>
	<div id="<%= Item::STATUSES[0] %>" class="single-status active-status">
		<span class="glyphicon glyphicon-pencil"></span>
		<h3><%= Item::STATUSES[0] %></h3>
	</div>
	<div id="<%= Item::STATUSES[1] %>" class="single-status">
		<span class="glyphicon glyphicon-wrench"></span>
		<h3><%= Item::STATUSES[1] %></h3>
	</div>
	<div id="<%= Item::STATUSES[2] %>" class="single-status">
		<span class="glyphicon glyphicon-gift"></span>
		<h3><%= Item::STATUSES[2] %></h3>
	</div>
</div> <!--end container-fluid div-->


<%= form_tag artist_item_update_and_send_email_path(@artist, @item), method: :patch do %>

	<%= hidden_field_tag "item[status]" %>

	<div class="field">
	  	<%= text_area_tag "item[note]", nil, placeholder: "Add a note to describe the progress you've made.", size: "40x4" %>

	</div>

	<%= submit_tag "Send update to customer", class: "btn btn-default" %>
	<button type="button" class="btn btn-default protip popover-dismiss" id="update-help" data-toggle="popover" data-placement="bottom" data-content="An email will be sent to the customer with your current phase and note.">?</button>
	

<% end %>


<%= link_to "Edit/delete this project", edit_artist_item_path, class: "btn btn-default", id: "item-edit-button" %>

</div>