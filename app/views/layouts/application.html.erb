<!DOCTYPE html>
<html>
<head>
  <title>Cupdate: the project update app</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
	<link href='http://fonts.googleapis.com/css?family=Josefin+Sans:400,600|Roboto:300,700' rel='stylesheet' type='text/css'>
</head>
<body class="<%= controller.controller_name %>">

	<% if notice %>
		<p class="alert alert-info alert-dismissable in fade">
			<%= notice %>
		</p>
	<% end %>

	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
		    <div class="navbar-header">
			      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#nav-expanded">
			        <span class="sr-only">Toggle navigation</span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			      </button>
			      <a href= "/"><%= image_tag("cupdate_logo.png", class: "nav-logo") %></a>
    		</div>
			<div class="collapse navbar-collapse" id="nav-expanded">
			    <form class="navbar-right">
	  				<% if session[:artist_id] %>
	  				<ul class="nav navbar-nav">
	  					<li><%= link_to "Dashboard", artist_path(@artist) %></li>
		  				<li id="nav-signed-in"><%= link_to "#{@current_user.first_name}'s account", edit_artist_path(Artist.find(session[:artist_id])) %></li>
		  				<li id="nav-account"><%= link_to "Account", edit_artist_path(Artist.find(session[:artist_id])) %></li>
		  				<li><%= link_to "Log out", sessions_destroy_path %></li>
		  			</ul>
		  			<% else %>
		  			<ul class="nav navbar-nav">
		  				<li><%= link_to "Sign up", new_artist_path %></li>
			  			<li><%=	link_to "Log in", sign_in_path %></li>
			  		</ul>
	  				<% end %>
				</form>
			</div>
		</div>
		</nav>


<div id="app-wrap">

<%= yield %>

</div><!--end app-wrap div-->

<footer>
	<div id="footer-img" class="container"><%= image_tag("cup_footer_white.png") %></div>
	<p>Built by <a href="http://www.efeqdev.com" target=_blank>Efeqdev</a></p>
</footer>

</body>
</html>
