<h1>Artist Dashboard</h1>

<h3>Welcome back <%= @artist.first_name %>!</h3>

<table id="item-table">
  <thead>
    <tr>
      <th>Item</th>
      <th>Customer</th>
    </tr>
  </thead>

  <tbody>
    <% if @items.length > 0 %>
      <% @items.each do |item| %>
        <tr class="item-row">
          <td><%= link_to "#{item.name}", artist_item_path(item.artist_id, item) %></td>
          <td><%= link_to "#{item.customer_full_name}", artist_item_path(item.artist_id, item) %></td>
        </tr>
      <% end %>
      <% else %>
        <td colspan="2" id="no-items-notice">You haven't added any items to your dashboard yet.</td>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to "Add new", new_artist_item_path(@artist), class: "btn btn-default" %>

<%= link_to "Edit your settings", edit_artist_path, class: "btn btn-default" %>